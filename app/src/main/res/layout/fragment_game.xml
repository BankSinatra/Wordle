<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewmodel"
            type="com.example.wordle.game.GameViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wordle.game.GameFragment">


    <LinearLayout
        android:id="@+id/letter_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/word_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/word_1_letter_1"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='H' />

            <TextView
                android:id="@+id/word_1_letter_2"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='A' />

            <TextView
                android:id="@+id/word_1_letter_3"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='P' />

            <TextView
                android:id="@+id/word_1_letter_4"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='P' />

            <TextView
                android:id="@+id/word_1_letter_5"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='Y' />
        </LinearLayout>

