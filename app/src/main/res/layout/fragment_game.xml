                android:background="@drawable/letter_block_unsubmitted"
                tools:text='H' />

            <TextView
                android:id="@+id/word_2_letter_2"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='A' />

            <TextView
                android:id="@+id/word_2_letter_3"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='P' />

            <TextView
                android:id="@+id/word_2_letter_4"
                style="@style/letter_block"
                android:background="@drawable/letter_block_unsubmitted"
                tools:text='P' />

            <TextView
                android:id="@+id/word_2_letter_5"
