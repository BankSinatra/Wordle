<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.wordle.game.GameFragment">

    <LinearLayout
        android:id="@+id/word_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/word_1_letter_1"
            style="@style/letter_block"
            android:background="@drawable/letter_block_unsubmitted"
            tools:text='H' />

        <TextView
            android:id="@+id/word_1_letter_2"
            style="@style/letter_block"
            android:background="@drawable/letter_block_unsubmitted"
            tools:text='A' />

        <TextView
            android:id="@+id/word_1_letter_3"
            style="@style/letter_block"
            android:background="@drawable/letter_block_unsubmitted"
            tools:text='P' />

        <TextView
            android:id="@+id/word_1_letter_4"
            style="@style/letter_block"
            android:background="@drawable/letter_block_unsubmitted"
            tools:text='P' />

        <TextView
            android:id="@+id/word_1_letter_5"
            style="@style/letter_block"
            android:background="@drawable/letter_block_unsubmitted"
            tools:text='Y' />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>